#:kivy 1.0
<OpenDialog>:
    title: 'Confirmação'
    size_hint: 0.9, 0.3
    auto_dismiss: False
    text: 'Teste'

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: root.mensagem

        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: root.mgs_bt1
                background_color: 0,1,255,0.7
                on_press: root._enter()

            Button:
                text: root.mgs_bt2
                background_color: 255,0,0,0.9
                on_press: root._cancel()